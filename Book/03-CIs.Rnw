gf_dotplot(~ mean, binwidth = .08, colour = ~(27.70 <= mean & mean <= 30.71), 
           data = Bootstrap, show.legend = FALSE)

cdata( ~ mean, 0.99, data = Bootstrap)
gf_dotplot(~ mean, binwidth = .08, colour = ~(26.98 <= mean & mean <= 31.63), 
           data = Bootstrap, show.legend = FALSE)
